<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="9"
    tools:context=".Calibration" >

    <TextView
        android:id="@+id/textChannel"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Kanal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinnerChannel"
        style="android:spinnerStyle"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="0"
        tools:listitem="@android:layout/simple_spinner_item" />

    <Button
        android:id="@+id/buttonStartCalibration"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:onClick="startCalibration"
        android:text="START" />

    <Button
        android:id="@+id/buttonStopCalibration"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:onClick="stopCalibration"
        android:text="STOP" />

    <TextView
        android:id="@+id/textLastIntensityPercent"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="0.00%"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textLastIntensity"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="Lezte Intensit채t:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonCalibration"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|bottom"
        android:layout_row="4"
        android:onClick="testIntensity"
        android:text="Teste Intensit채t 5s" />

    <TextView
        android:id="@+id/textIntensity"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="0dp"
        android:layout_row="1"
        android:text="Intensit채t:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textIntensityPercent"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="0dp"
        android:layout_row="1"
        android:text="0.00%"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/seekBarMaxIntensity"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_row="7" />

    <TextView
        android:id="@+id/calibrationTitle"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="20dp"
        android:layout_row="6"
        android:text="Intensit채t:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:layout_row="6"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="8"
        android:onClick="stopTestingAngle"
        android:text="Stop" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="8"
        android:onClick="testAngle"
        android:text="Start" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text="Winkel Suche"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</GridLayout>